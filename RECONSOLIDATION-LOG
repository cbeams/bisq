git clone bisq-network/desktop bisq
add RECONSOLIDATION-* docs
git clean
$ mkdir fx
$ git mv src build.gradle settings.gradle package fx
$ mkdir fx/gradle
$ git mv gradle/witness/ fx/gradle/
$ vi fx/settings.gradle # change projectname to bisq-fx
$ touch build.gradle settings.gradle # apply plugin java-base set rootProject.name = 'bisq'
$ remove fx/settings.gradle
$ vi settings.gradle and prefix all subprojects as bisq-*

# zero out top-level README and replace with basic build / run / IDEA config and import instructions
# including the bit from bisq-common's README about idea.max.intellisense.filesize=12500

$ git clone bisq-network/bisq-common common && cd common
$ git clean -dfx
$ rm -rf .editorconfig .git .gitignore .gradle gradle gradlew* settings.gradle LICENSE README.md CONTRIBUTING.md .travis.yml .idea
# import common into top-level settings.gradle
# change dependency in fx/build.gradle to project ':bisq-common'
$ gradle clean build # from root
# check it all in

$ git clone bisq-network/bisq-core core && cd core
$ rm -rf .editorconfig .git .gitignore .idea .travis.yml CONTRIBUTING.md LICENSE README.md gradle gradle.properties gradlew* settings.gradle
# import core into top-level settings.gradle
# change dependency in fx/build.gradle to project ':bisq-core'
$ gradle clean build # from root
# commit

$ git clone bisq-network/bisq-p2p net && cd net
$ rm -rf .editorconfig .git .gitignore .idea .travis.yml CONTRIBUTING.md LICENSE README.md gradle gradle.properties gradlew* settings.gradle
# import net into top-level settings.gradle
# change dependency in fx/build.gradle to project ':bisq-net'
# change dependency in core/build.gradle to project ':bisq-net'
$ gradle clean build # from root
# commit
# change dependency in (net) build.gradle to project ':common'
# commit

$ git clone bisq-network/bisq-assets assets && cd assets
